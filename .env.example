# DatoCMS Configuration
# API token for authenticating requests to DatoCMS content API
DATOCMS_API_TOKEN=your_dato_cms_api_token_here

# EmailOctopus Configuration
# API key for authenticating EmailOctopus newsletter subscription requests
EMAIL_OCTOPUS_API_KEY=your_email_octopus_api_key_here
# Full API endpoint URL for your EmailOctopus list (replace {list_id} with your actual list ID)
EMAIL_OCTOPUS_API_ENDPOINT=https://emailoctopus.com/api/1.6/lists/{list_id}/contacts

# CORS Configuration
# Allowed origin for Cross-Origin Resource Sharing (e.g., your frontend URL)
CORS_ORIGIN=http://localhost:3000

# Server Configuration
# Node.js environment mode (development, production, etc.)
NODE_ENV=development
# Port number for the Express server to listen on
PORT=3001

# CORS Additional Settings
# Whether to allow credentials (cookies, authorization headers) in CORS requests
CORS_CREDENTIALS=false
# Comma-separated list of allowed HTTP methods for CORS requests
CORS_METHODS=GET,POST,PUT,DELETE,PATCH

# Localization
# Default locale code for content (e.g., 'en' for English)
DEFAULT_LOCALE=en

# Shopify Storefront API Configuration
# Store domain (e.g., your-store.myshopify.com)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
# Public access token from Shopify Storefront API
# Create one at: https://shopify.dev/docs/apps/storefront-api/getting-started
SHOPIFY_PUBLIC_ACCESS_TOKEN=your-shopify-public-access-token-here
# Shopify API version (e.g., 2026-01)
SHOPIFY_API_VERSION=2026-01